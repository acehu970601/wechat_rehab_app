/* personal.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 30rpx;
  border-radius: 40%;
  border: 2px double #2fa6f5;
}

.txt{
  margin-top: 10px;
  margin-bottom:8px;
  font-weight: normal;
  color: #2fa6f5;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: center;
}

.credit{
  margin-top: 10px;
  margin-bottom: 20px;
  color: black;
  font-weight: 800;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: center;
  padding-top: 4%;
  padding-bottom: 4%;
  border: 3px dotted black;
  border-radius: 50%;
  width: 50%;
}

.prog{
  width: 80%;
}

.buttons{
  width: 98%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-bottom:5px;
}
.buttons::after{
  border:0;
}