/* pages/chooseMode/chooseMode.wxss */
page{
  height:100%;
  width:100%;
}
.top {
  margin-top: 10px;
  display: flex;
  flex-flow: row;
  justify-content: space-around;
}

.topButton {
  align-items: center;
  margin-top:10px;
  font-size: 12px;   
  color: #777;
  margin: 5px;
  padding: 10px;
}

.active {
  transform: scale(1.3);
  transform: all 2s;
  border-bottom-style: solid;
  border-bottom-color: #e04f5f;
  border-bottom-width: 2.5px;
  color: #000;
}

.startButtonDefault {
  font-size: 20px;
  width: 100%;
  height: 200rpx;
  margin-top: 15px;
  background-color:#e04f5f;
  color: white;
  border: solid;
  border-radius: 22rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.tt{
   margin-top: 10px;
  color: #666666;
  font-size: 30rpx;
}

.scrollView{
  display: flex;
  flex-direction: column;
}

.finalMenu {
  display: flex;
  flex-direction: row;
}

.commodityScreen {
 width: 100%;
 height: 100%;
 position: fixed;
 top: 0;
 left: 0;
 background: #000;
 opacity: 0.2;
 overflow: hidden;
 z-index: 1000;
 color: #fff;
}
 
.commodityAttr {
 width: 100%;
 overflow: hidden;
 position: fixed;
 bottom: 0;
 left: 0;
 z-index: 2000;
 background: #fff;
 padding-top: 20rpx;
 height: 600rpx;
}

.titlePic{
  width: 750rpx;
  height: 750rpx;
}

.dailyImage{
  width: 100px;
  height: 80px;
}

.dailyText{
  display:block;
  width:100%;
  font-size:24rpx;
}

.generalList {
  background: #ffffff;
  padding: 2px 2px;
  width: 100%;
  white-space: nowrap;
  box-sizing: border-box;
  border-bottom: 8px solid gainsboro;
}

.generalList  .item {
  width: 100px;
  height: 80px;
  border: none;
  background: white;
  display: inline-block;
  margin-right: 10px;
}

.txt1{
  margin-top: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  color: black;
  font-size: 20px;
  font-weight: normal;
  padding-left: 10px;
}

.txt2{
  color: #2fa6f5;
  font-size: 30px;
  font-weight: normal;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.totalScorll {
  width: 100%;
  margin-top:10rpx;
  margin-bottom: 10rpx;
}
.a{
  background: white;

  /* align-items: center; */
  color: black;
  width: 90%;
  margin-top:5%;
  margin-bottom: 15%;
  margin-left: 5%;
  margin-right: 5%;
  border: 2px solid black;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.a1{
  font-size: 20px;
  font-weight: 500;
  margin-bottom: 20rpx;
  text-decoration: underline;
 }
.a2{
  padding-left: 10px;
  padding-right: 10px;
  font-size: 15px;
  font-weight: normal;
 }

 .buttonk{
  position:fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 10%;
  background-color:#2fa6f5;
  color: white;
  border-radius: 0;
}

.buttonk::after{
  border-radius:0;
}

.buttond{
  position:fixed;
  bottom: 0;
  right:0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 10%;
  border-radius:0;
} 

.buttond::after{
  border-radius:0;
}